{
    "name": "Mobilizon",
    "id": "mobilizon",
    "packaging_format": 1,
    "description": {
        "en": "Decentralized and federated platform to organize events",
        "fr": "Plateforme décentralisée et fédérée pour organiser des événements"
    },
    "version": "2.0.0~ynh1",
    "url": "https://joinmobilizon.org/",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://joinmobilizon.org/",
        "demo": "https://demo.mobilizon.org",
        "userdoc": "https://docs.joinmobilizon.org",
        "code": "https://framagit.org/framasoft/mobilizon/"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "yalh76"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}
